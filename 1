from pygame import *


class GameSprite(sprite.Sprite):
    def __init__(self,sp_image,sp_x,sp_y,xsize,ysize,speed):
        super().__init__()
        self.image = transform.scale(image.load(sp_image),(xsize,ysize))
        self.speed = speed
        self.rect = self.image.get_rect()
        self.rect.x = sp_x
        self.rect.y = sp_y
    def show(self):
        window.blit(self.image,(self.rect.x,self.rect.y))

class Player(GameSprite):
    def update_r(self):
        keys_pressed = key.get_pressed()
        if keys_pressed[K_DOWN] and self.rect.y > 5:
            self.rect.y -= self.speed
        if keys_pressed[K_UP] and self.rect.y < win_height - 80:
            self.rect.y += self.speed
    def update_l(self):
        keys_pressed = key.get_pressed()
        if keys_pressed[K_s] and self.rect.y > 5:
            self.rect.y -= self.speed
        if keys_pressed[K_w] and self.rect.y < win_height - 80:
            self.rect.y += self.speed
